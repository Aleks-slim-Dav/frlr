block variables
    - var title = 'Это мой сайт'
    - var head1 = 'Это заголовок по умолчанию'
    - var content = 'Это контент страницы по умолчанию'

doctype html
html(lang="ru")
    head
        include modules/head
        block scripts
    body
        block header
            include modules/header
        block content
            main
                h1 #{head1}
                div.content
                    p #{content}
        block footer
            include modules/footer 
            